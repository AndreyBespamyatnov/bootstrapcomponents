@using BootstrapComponents.Components.Navs
<h2>Navs</h2>

<h3>Pills</h3>
<div class="panel panel-default">
    <div class="panel-body">
        @using (var nav = Html.Nav("Home", Nav.Settings.Pills()))
        {
            @nav.Link("Home", "#")
            @nav.Link("Profile", "#")
            @nav.Link("Messages", "#")
        }
    </div>
    <div class="panel-footer code">&#64;using (var nav = Html.Nav("Home", Nav.Settings.Pills()))
{
    &#64;nav.Link("Home", "#")
    &#64;nav.Link("Profile", "#")
    &#64;nav.Link("Messages", "#")
}</div>
</div>
<p>Pills are also vertically stackable, just chain <code>Stack()</code> onto the settings parameter (must immediately follow the <code>Pills()</code> call)</p>
<div class="panel panel-default">
    <div class="panel-body">
        @using (var nav = Html.Nav("Home", Nav.Settings.Pills().Stack()))
        {
            @nav.Link("Home", "#")
            @nav.Link("Profile", "#")
            @nav.Link("Messages", "#")
        }
    </div>
    <div class="panel-footer code">&#64;using (var nav = Html.Nav("Home", Nav.Settings.Pills().Stack()))
{
    &#64;nav.Link("Home", "#")
    &#64;nav.Link("Profile", "#")
    &#64;nav.Link("Messages", "#")
}</div>
</div>

